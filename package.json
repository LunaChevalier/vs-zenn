{
	"name": "vs-zenn",
	"displayName": "vs-zenn",
	"description": "",
	"version": "0.2.3",
	"repository": "https://github.com/LunaChevalier/vs-zenn",
	"publisher": "LunaChevalier",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vs-zenn.new.article",
		"onView:vs-zenn-article"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vs-zenn.refresh",
				"title": "Refresh",
				"icon": {
					"dark": "images/refresh.svg",
					"light": "images/refresh.svg"
				}
			},
			{
				"command": "vs-zenn.new.article",
				"title": "vs-zenn: new article"
			},
			{
				"command": "vs-zenn.new.book",
				"title": "vs-zenn: new book"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vs-zenn",
					"title": "vs-zenn",
					"icon": "images/vs-zenn.svg"
				}
			]
		},
		"views": {
			"vs-zenn": [
				{
					"id": "vs-zenn-article",
					"name": "article"
				},
				{
					"id": "vs-zenn-book",
					"name": "book"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vs-zenn.refresh",
					"when": "view == vs-zenn-article || view == vs-zenn-book",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "vs-zenn",
			"properties": {
				"vs-zenn.usingCommand": {
					"type": "string",
					"default": "npx",
					"enum": [
						"npx",
						"yarn"
					],
					"markdownEnumDescriptions": [
						"use `npx` when executing the zenn-cli commands",
						"use `yarn` when executing the zenn-cli commands"
					]
				},
				"vs-zenn.rootDir": {
					"type": "string",
					"markdownDescription": "Please input directory where `zenn-cli` is installed"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/js-yaml": "^3.12.5",
		"js-yaml": "^3.14.0"
	}
}
